{
  "name": "hp-vvs-standalone-app",
  "version": "0.1.0",
  "description": "Desktop local port of HP/VVS Sales Automation",
  "main": "src/main/electron.js",
  "type": "module",
  "scripts": {
    "predev": "npm run rebuild:electron",
    "dev": "electron .",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "pretest": "npm run rebuild:node",
    "test": "node --test",
    "rebuild:electron": "npm rebuild better-sqlite3 --runtime=electron --target=29.0.0",
    "rebuild:node": "npm rebuild better-sqlite3"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "csv-parse": "^5.5.4",
    "dotenv": "^16.4.5",
    "luxon": "^3.4.4"
  },
  "devDependencies": {
    "electron": "^29.0.0"
  }
}
